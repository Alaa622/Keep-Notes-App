<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.UpdateNoteFragment"
        android:orientation="vertical">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/editNotebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="28dp"
            android:tintMode="@color/white"
            app:srcCompat="@drawable/done_icon"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/editNote_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_note"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:padding="6dp"/>
        <EditText
            android:id="@+id/editNote_Title_Et"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="@string/title"
            android:padding="6dp"
            android:elevation="2dp"
            android:layout_below="@+id/editNote_tv"
            />
        <EditText
            android:id="@+id/editNote_Content_Et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/type_your_note"
            android:gravity="top"
            android:padding="6dp"
            android:layout_margin="8dp"
            android:elevation="2dp"
            android:layout_below="@id/editNote_Title_Et"/>


    </RelativeLayout>
</layout>